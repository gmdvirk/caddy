:80 {
    # Proxy requests to the ping backend
    @pingBackend path /ping /ping/*
    handle @pingBackend {
        reverse_proxy ping-backend:3002
    }

    # Serve the frontend
    root * /usr/share/caddy
    file_server

    # Handle client-side routing by serving index.html for unmatched routes
    handle {
        try_files {path} /index.html
    }
}
